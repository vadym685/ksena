<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.ksena.web.screens.company">
    <data>
        <instance id="companyDc"
                  class="com.company.ksena.entity.company.Company"
                  view="company-view">
            <loader>
            </loader>
            <collection id="responsibleEmployeeDc" property="responsibleEmployee"/>
            <collection id="pointsDc" property="points"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="companyDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <pickerField id="companyTypeField" property="companyType"/>
                <textField id="fullNameField" property="fullName" editable="false"/>
                <textField id="legalIndexField" property="legalIndex"/>
                <textField id="legalCity" property="legalCity"/>
                <textField id="legalStreet" property="legalStreet"/>
                <textField id="legalHouseNumber" property="legalHouseNumber"/>
                <textField id="actualIndex" property="actualIndex"/>
                <textField id="actualCity" property="actualCity"/>
                <textField id="actualStreet" property="actualStreet"/>
                <textField id="actualHouseNumber" property="actualHouseNumber"/>
                <textField id="fieldOfActivity" property="fieldOfActivity"/>
                <textArea id="fieldOfActivityFull" property="fieldOfActivityFull"/>
                <lookupField id="billSendType" property="billSendType"/>
                <lookupField id="vatField" property="vat"/>
                <textField id="emailField" property="email"/>
                <maskedField id="contactPhoneField" property="contactPhone" mask="~##(###)###-##-##" valueMode="masked"/>
                <pickerField id="companyCategoryField" property="companyCategory"/>
                <textField id="individualTaxpayerNumberField" property="individualTaxpayerNumber"/>
            </column>
        </form>

        <buttonsPanel>
            <button invoke="createTaskDoc" caption="msg://createTaskDoc"/>
            <button invoke="createTask" caption="msg://createTask"/>
        </buttonsPanel>

        <groupBox id="responsibleEmployeeBox"
                  caption="msg://com.company.ksena.entity.company/Company.responsibleEmployee">
            <table id="responsibleEmployeeTable" dataContainer="responsibleEmployeeDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <buttonsPanel>
<!--                    <button id="addResponsibleEmployee" caption="Add"/>-->
                    <button action="responsibleEmployeeTable.add"/>
                    <button action="responsibleEmployeeTable.exclude"/>
                </buttonsPanel>
                <columns>
                    <column id="fullName"/>
                    <column id="position"/>
                    <column id="email"/>
                    <column id="phoneNumber"/>
                    <column id="pasportNumber"/>
                    <column id="authority"/>
                    <column id="dateOfIssue"/>
                    <column id="individualTaxpayerNumber"/>
                    <column id="sex"/>
                    <column id="companies"/>
                </columns>
            </table>
        </groupBox>
        <groupBox id="pointsBox"
                  caption="msg://com.company.ksena.entity.company/Company.points">
            <table id="pointsTable" dataContainer="pointsDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <buttonsPanel>
                    <button action="pointsTable.add"/>
                    <button action="pointsTable.exclude"/>
                </buttonsPanel>
                <columns>
                    <column id="name"/>
                    <column id="city"/>
                </columns>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
