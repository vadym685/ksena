<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.ksena.web.screens.clientemployee">
    <data>
        <instance id="clientEmployeeDc"
                  class="com.company.ksena.entity.people.ClientEmployee"
        >
            <view>
                <property name="companies" view="_minimal"/>
                <property name="fullName"/>
                <property name="phoneNumber"/>
                <property name="pasportNumber"/>
                <property name="authority"/>
                <property name="dateOfIssue"/>
                <property name="individualTaxpayerNumber"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="clientEmployeeDc">
            <column width="250px">
                <textField id="fullNameField" property="fullName"/>
                <textField id="companiesField" property="companies"/>
                <textField id="phoneNumberField" property="phoneNumber"/>
                <textField id="pasportNumberField" property="pasportNumber"/>
                <textField id="authorityField" property="authority"/>
                <dateField id="dateOfIssueField" property="dateOfIssue"/>
                <lookupField id="sexField" property="sex"/>
                <textField id="individualTaxpayerNumberField" property="individualTaxpayerNumber"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
