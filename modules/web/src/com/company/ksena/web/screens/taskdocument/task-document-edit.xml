<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.ksena.web.screens.taskdocument">
    <data>
        <instance id="taskDocumentDc"
                  class="com.company.ksena.entity.task.TaskDocument"
                  view="taskDocument-view">
            <loader/>
            <collection id="employeesDc" property="employees"/>
            <collection id="inventoryDc" property="inventory"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="taskDocumentDc">
            <column width="250px">
                <dateField id="createDateField" property="createDate"/>
                <checkBox id="isActiveField" property="isActive"/>
                <pickerField id="clientField" property="client">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <lookupField id="taskTypeField" property="taskType"/>
                <pickerField id="pointField" property="point">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <groupBox id="employeesBox" caption="msg://com.company.ksena.entity.task/TaskDocument.employees">
            <table id="employeesTable" dataContainer="employeesDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="fullName"/>
                    <column id="employeeType"/>
                </columns>
                <buttonsPanel>
                    <button action="employeesTable.add"/>
                    <button action="employeesTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <groupBox id="inventoryBox" caption="msg://com.company.ksena.entity.task/TaskDocument.inventory">
            <table id="inventoryTable" dataContainer="inventoryDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="description"/>
                </columns>
                <buttonsPanel>
                    <button action="inventoryTable.add"/>
                    <button action="inventoryTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
