<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.ksena.web.screens.companycategory">
    <data>
        <instance id="companyCategoryDc"
                  class="com.company.ksena.entity.company.CompanyCategory"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="companyCategoryDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose" caption="mainMsg://windowCommitAndClose"/>
            <button action="windowClose" caption="mainMsg://windowClose"/>
        </hbox>
    </layout>
</window>
