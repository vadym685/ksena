<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        messagesPack="com.company.ksena.web.screens.taskCalendar">

    <layout>
        <groupBox spacing="true">
        <hbox spacing="true">
            <dateField id="startDate"/>
            <dateField id="finishDate"/>
            <button id="refresh" caption="mainMsg://refresh"/>
            <button id="mainPeriod" caption="mainMsg://mainPeriod"/>
        </hbox>
        <hbox expand="calendar"
              height="100%"
              spacing="true"
              width="100%" responsive="true">
            <calendar id="calendar"
                      height="100%" responsive="true"/>
        </hbox>
        </groupBox>
    </layout>
</window>